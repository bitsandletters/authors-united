---
import type { CollectionEntry } from "astro:content";

export type Props = {
  author: CollectionEntry<"authors">;
};

const { author } = Astro.props as Props;
const names = author.data.name.split(/&|,|and/);
---

<div class="pb-2">
  <p class="book-author">
    {
      names.map((name, index) => {
        return (
          <>
            <span class="inline-block">{name}</span>
            {index < names.length - 1 && <span class="inline-block">&</span>}
          </>
        );
      })
    }
  </p>
</div>
